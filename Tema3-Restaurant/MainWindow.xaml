<Window x:Class="Tema3_Restaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Restaurant"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFF3C1C1">
    <Grid Margin="0,0,0,-16">
        <TextBlock HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" Text="Welcome to the Online Restaurant" VerticalAlignment="Top" Height="45" Width="436" FontSize="24" FontFamily="Cooper Black" TextAlignment="Center"/>
        <Button Content="Log In" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Height="60" Width="244" Background="White" FontSize="16" FontFamily="Cooper Black" Click="LogIn_Click"></Button>
        <Button Content="Create Account" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Height="60" Width="244" Background="White" FontFamily="Cooper Black" FontSize="16" Click="CreateAccount_Click"/>
        <Button Content="Continue Without Account" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Height="60" Width="244" Background="White" FontFamily="Cooper Black" FontSize="14" Click="ContinueWithoutAccount_Click"/>

    </Grid>
</Window>
