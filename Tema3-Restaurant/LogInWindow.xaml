<Window x:Class="Tema3_Restaurant.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogInWindow" Height="450" Width="800" Background="#FFF3C1C1">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,93,0,0" TextWrapping="Wrap" Text="Log In" VerticalAlignment="Top" FontSize="24" Width="166" TextAlignment="Center" FontFamily="Cooper Black"/>
        <TextBlock HorizontalAlignment="Left" Margin="86,140,0,0" TextWrapping="Wrap" Text="Email :" VerticalAlignment="Top" FontSize="22" FontFamily="Cooper Black"/>
        <TextBlock HorizontalAlignment="Left" Margin="86,260,0,0" TextWrapping="Wrap" Text="Password :" VerticalAlignment="Top" FontSize="22" FontFamily="Cooper Black"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="86,314,0,0" VerticalAlignment="Top" Width="397" Height="24"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="86,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Height="27"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="677,190,0,0" VerticalAlignment="Top" Height="42" Width="69" FontFamily="Cooper Black" Background="White" Click="Exit_Click"/>
        <Button Content="Log In" HorizontalAlignment="Left" Margin="677,296,0,0" VerticalAlignment="Top" Height="42" Width="69" FontFamily="Cooper Black" Background="White" Click="LogIn_Click"/>
    </Grid>
</Window>